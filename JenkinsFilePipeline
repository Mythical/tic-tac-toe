pipeline {
    agent {
        docker {
            image 'node:18.17.1-alpine3.18'
        }
    }
    environment {
        FIREBASE_DEPLOY_TOKEN = credentials('firebase-token')
    }
    stages {
        stage('Building') {
            steps {
                sh 'npm install -g firebase-tools'
            }
        }

        stage('Testing') {
            steps {
                sh 'echo Simulating deploy to Testing environment'
            }
        }

        stage('Staging') {
            steps {
                sh 'echo Simulating deploy to Staging environment'
            }
        }

        stage('Production') {
            steps {
                sh 'echo Simulating deploy to Production environment'
            }
        }
    }
}
pipeline {
    agent {
        docker {
            image 'node:18.17.1-alpine3.18'
        }
    }
    environment {
        FIREBASE_DEPLOY_TOKEN = credentials('firebase-token')
    }
    stages {
        stage('Building') {
            steps {
                sh 'npm install -g firebase-tools'
            }
        } 
        stage('Testing') {
            steps {
                sh 'firebase deploy -P tic-tac-toe-testing --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }
        stage('Staging') {
            steps {
                sh 'firebase deploy -P tic-tac-toe-staging --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }
        stage('Production') {
            steps {
                sh 'firebase deploy -P tic-tac-toe-production --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }
    }
}
